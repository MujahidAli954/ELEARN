<!DOCTYPE html>
<html><head>
<title>Elearn</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<meta name="description" content="" />
<meta name="copyright" content="" />
<link rel="stylesheet" type="text/css" href="/stylesheet/kickstart.css" media="all" />                 
<link rel="stylesheet" type="text/css" href="style.css" media="all" />                          
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script type="text/javascript" src="/javascript/kickstart.js"></script>                                 
</head><body>

<ul class="menu">
<li class="current"><a href="/">Home</a></li>
<li><a href="/classes">Classes</a></li>
</ul>

<div class="grid">
	
<!-- ===================================== END HEADER ===================================== -->
	 
<div class="col_12">
	<div class="col_9">
		{{#if success_msg}}
		<div class="notice success"><i class="icon-remove-sign-icon-large"></i>
           {{success_msg}}
        <a href="#close" class="icon-remove"></a>
		{{/if}}

		{{#if error_msg}}
		<div class="notice error"><i class="icon-remove-sign-icon-large"></i>
           {{error_msg}}
        <a href="#close" class="icon-remove"></a>
		{{/if}}

		{{#if error}}
		<div class="notice error"><i class="icon-remove-sign-icon-large"></i>
           {{error}}
        <a href="#close" class="icon-remove"></a>
		{{/if}}
	{{{body}}}
	</div>
	
	<div class="col_3">
	<h5>Student & instructor Login</h5>
	{{>login}}
	</div>
	
	<hr/>
	{{#if isHome}}
	{{>classes}}
	{{/if}}
</div>

</div><!-- END GRID -->

